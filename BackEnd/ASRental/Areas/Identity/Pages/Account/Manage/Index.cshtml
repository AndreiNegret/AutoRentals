@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<!--== Page Title Area Start ==-->
<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Profile Page</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                    <p></p>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>
<!--== Page Title Area End ==-->


<h1 class="my-3 text-center">@ViewData["Title"]</h1>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<form id="profile-form" method="post" enctype="multipart/form-data" class="py-5">
    <input type="hidden" value="@Model.UserId" />
    <section>
        <div class="row d-flex justify-content-center col-12">
            <div class="col-sm-10 col-md-6 col-lg-6 border border-success rounded m-24 mb-5">
                <div class="form-group">
                    <div class="imgcontainer py-5">
                        @{ if (Model.ProfilePicture == null)
                            {
                                <img src="~/images/avatar.png" style="width:30%" />
                            }
                            else
                            {
                                <img class="img_center" src="@Model.ProfilePicture"> }
                        }
                    </div>
                </div>
                <div class="form-group ">
                    <label asp-for="ProfilePicture" button id="update-profile-button" type="submit" class="btn btn-primary" accept=".png,.jpg,.jpeg,.gif,.tif">Change Profile Picture</label>

                    <input type="file" asp-for="ProfilePicture" class="form-control d-none " accept=".png,.jpg,.jpeg,.gif,.tif" />

                    <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber"/>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" value="@Model.FirstName" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" value="@Model.LastName" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button id="update-profile-button" type="submit" class="btn btn-primary">Update profile</button>
                </div>
                <div class="form-group">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </div>
        </div>
    </section>
</form>

<style>
    .img_center {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 80%;
        height: 40%;
    }

    .btn-primary {
        color: #fff;
        background-color: #0195eb;
        border-color: #0195eb;
    }

        .btn-primary:hover {
            color: #fff;
            background-color: #0280ca;
            border-color: #5698ff;
        }

    .border-success {
        border-color: #0195eb !important;
    }

    .form-control:focus {
        border-color: #0195eb !important;
        box-shadow: 0 0 2px rgba(28, 174, 187, 1) !important;
    }

    .profile-picture img {
        height: 150px;
    }

    .imgcontainer {
        display: flex;
        justify-content: center;
        align-content: center;
        margin: auto;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
