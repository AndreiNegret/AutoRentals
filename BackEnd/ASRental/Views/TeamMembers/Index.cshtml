@model IEnumerable<ASRental.Models.TeamMember>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MemberName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemberRank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MemberName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberRank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Administrator"))
                    {
                        <a class=" btn btn-primary" asp-action="Edit" asp-route-id="@item.TeamMemberId">Edit</a>
                        <a class="ml-3 btn btn-primary" asp-action="Details" asp-route-id="@item.TeamMemberId"> Details </a>
                        <a class="ml-3 btn btn-primary" asp-action="Delete" asp-route-id="@item.TeamMemberId"> Delete </a>
                    }
                }
            </td>
        </tr>
}
    </tbody>
</table>
