@model IEnumerable<ASRental.Models.BookCar>

@{
    <h1 class="center-text my-3">@ViewData["Title"]</h1>
}

<!--== Page Title Area Start ==-->
<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Congratulations!</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                    <p>Booking has been done successfully!</p>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>
<!--== Page Title Area End ==-->

<p>
    <a class="center-text my-3" asp-action="Create">Book Another Car</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PickDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReturnDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PickDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReturnDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CarName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BookCarId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BookCarId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BookCarId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
