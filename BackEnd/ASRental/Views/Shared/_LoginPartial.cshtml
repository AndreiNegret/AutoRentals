@using Microsoft.AspNetCore.Identity
@using ASRental.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="login-section">

    @if (SignInManager.IsSignedIn(User))
    {
        <div class="action">
            <a id="manage" class="nav-link ml-3" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
        </div>
        <div class="action">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">

                <button id="logout" type="submit" class="nav-link btn btn-link ml-3">Logout
                </button>
            </form>
        </div>
    }
    else
    {

    <div class="action">
        <ul>
            <li class="nav-item">
                <a class="nav-link" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
        </ul>
    </div>

    <div class="action">
        <ul>
        <li class="nav-item">
            <a class="nav-link" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>     
        </ul>
    </div>
    }
</div>

<style>
    .login-section a, .login-section {
        font-size: 1rem!important;
        color: #ffffff!important;
    }

    .login-section a:hover, .login-section:hover {
        color: #0195eb!important;
    }
</style>
