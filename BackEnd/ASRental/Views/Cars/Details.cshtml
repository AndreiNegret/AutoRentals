



@model ASRental.Models.BookCar

@{
    ViewData["Title"] = "Details";
}

<!--== Page Title Area Start ==-->
<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Our Cars</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                    <p>Learn more about our vehicles!</p>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>
<!--== Page Title Area End ==-->
<!--== Car List Area Start ==-->
<section id="car-list-area" class="section-padding">
    <div class="container">
        <div class="row">
            <!-- Car List Content Start -->
            <div class="col-lg-8">
                <div class="car-details-content">
                    <h2>Cadilac Escalade <span class="price">Rent: <b>$300</b></span></h2>
                    <div class="car-preview-crousel">
                        <div class="single-car-preview">
                            <img src="~/assets/img/cadinfo.jpeg" alt="JSOFT" />
                        </div>
                        <div class="single-car-preview">
                            <img src="~/assets/img/cadiback.jpeg" alt="JSOFT" />
                        </div>
                        <div class="single-car-preview">
                            <img src="~/assets/img/cadinterior.jpeg" />
                        </div>
                    </div>
                    <div class="car-details-info">
                        <h4>Additional Info</h4>
                        <p>The Cadillac Escalade is a full-size luxury SUV engineered and manufactured by General Motors. It was Cadillac's first major entry into the SUV market. As of 2015, the Cadillac Escalade is available in every country that Cadillac is available in.[citation needed] The Escalade ESV version is available in the United States, Canada, Mexico, Russia and the Middle East. It is Cadillac's largest luxury oriented, passenger- and load-carrying vehicle, which was a niche previously filled by the Cadillac Commercial Chassis.</p>

                        <div class="technical-info">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="tech-info-table">
                                        <table class="table table-bordered">
                                            <tr>
                                                <th>Class</th>
                                                <td>SUV</td>
                                            </tr>
                                            <tr>
                                                <th>Fuel</th>
                                                <td>Petrol</td>
                                            </tr>
                                            <tr>
                                                <th>Doors</th>
                                                <td>5</td>
                                            </tr>
                                            <tr>
                                                <th>GearBox</th>
                                                <td>Automatic</td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="tech-info-list">
                                        <ul>
                                            <li>ABS</li>
                                            <li>Air Bags</li>
                                            <li>Bluetooth</li>
                                            <li>Car Kit</li>
                                            <li>GPS</li>
                                            <li>Music</li>
                                            <li>Heated wheel</li>
                                            <li>Ventilated & Heated Seats</li>
                                            <li>7 Seats</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
                <!-- Sidebar Area End -->
            </div>
        </div>
    </div>
</section>

<h1 class="center-text my-3">Book</h1>
<h4 class="center-text my-3">Your Car</h4>
<hr />

<form method="post" onsubmit="processForm(event)" class="d-flex m-5">
    <div class="pick-location bookinput-item">
        <select asp-for="Location" name="location" placeholder="Location" required class="custom-select">
            <option selected>Pick Location</option>
            <option value="San Francisco">San Francisco</option>
            <option value="Los Angeles">Los Angeles</option>
            <option value="San Diego">San Diego</option>
            <option value="San Jose">San Jose</option>
            <option value="Fresno">Fresno</option>
            <option value="Sacramento">Sacramento</option>
        </select>
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="pick-date bookinput-item">
        <input asp-for="PickDate" type="text" id="startDate" name="pickDate" placeholder="Pick Date" class="start-date" required />
    </div>

    <div class="return-date bookinput-item">
        <input asp-for="ReturnDate" type="text" id="endDate" placeholder="Return Date" name="returnDate" class="end-date" required />
    </div>

    <div class="car-choose bookinput-item">
        <select asp-for="CarName" type="text" name="carName" placeholder="Car Name" required class="custom-select">
            <option selected>Car Name</option>
            <option value="Cadillac">Cadillac</option>
            <option value="Audi">Audi</option>
            <option value="BMW">BMW</option>
            <option value="Mercedes-Benz">Mercedes-Benz</option>
            <option value="Porsche">Porsche</option>
            <option value="Jeep">Jeep</option>
        </select>
        <span asp-validation-for="CarName" class="text-danger"></span>
    </div>

    <div class="bookcar-btn bookinput-item">
        <input asp-action="Gallery" type="submit" value="Book Car" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

