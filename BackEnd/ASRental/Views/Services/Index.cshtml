@model IEnumerable<ASRental.Models.Service>

@{
    ViewData["Title"] = "Services";
}

<!--== Page Title Area Start ==-->
<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Our Services</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                    <p>Order your favourite service!</p>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>
<!--== Page Title Area End ==-->

<h1 class="center-text my-3">@ViewData["Title"]</h1>

<p>
    <a class="center-text my-3" asp-action="Create">Order a new service</a>
</p>
<table class="table m-5">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServiceType)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceType)
                </td>

                <td>

                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.IsInRole("Administrator"))
                        {
                            <a class=" btn btn-primary" asp-action="Edit" asp-route-id="@item.ServiceId">Edit</a>
                            <a class="ml-3 btn btn-primary" asp-action="Details" asp-route-id="@item.ServiceId"> Details </a>
                            <a class="ml-3 btn btn-primary" asp-action="Delete" asp-route-id="@item.ServiceId"> Delete </a>
                        }
                    }

                </td>
            </tr>
        }
    </tbody>
</table>

